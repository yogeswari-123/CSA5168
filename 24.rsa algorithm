#include <stdio.h>
int extended_gcd(int a, int b, int *x, int *y) {
    if (a == 0) {
        *x = 0;
        *y = 1;
        return b;
    }
    int x1, y1;
    int gcd = extended_gcd(b % a, a, &x1, &y1);

    *x = y1 - (b / a) * x1;
    *y = x1;

    return gcd;
}
int mod_inverse(int e, int phi) {
    int x, y;
    int g = extended_gcd(e, phi, &x, &y);
    if (g != 1) {
        printf("Inverse doesn't exist\n");
        return -1;
    }
    return (x % phi + phi) % phi;
}
int is_prime(int num) {
    if (num <= 1) return 0;
    for (int i = 2; i * i <= num; i++) {
        if (num % i == 0) return 0;
    }
    return 1;
}
void find_prime_factors(int n, int *p, int *q) {
    for (int i = 2; i <= n / 2; i++) {
        if (n % i == 0 && is_prime(i) && is_prime(n / i)) {
            *p = i;
            *q = n / i;
            return;
        }
    }
}

int main() {
    int e = 31;
    int n = 3599;
    int p, q;
    find_prime_factors(n, &p, &q);

    printf("Prime factors of n: p = %d, q = %d\n", p, q);
    int phi_n = (p - 1) * (q - 1);
    printf("phi(n) = %d\n", phi_n);
    int d = mod_inverse(e, phi_n);
    if (d != -1) {
        printf("The private key (d) is: %d\n", d);
    }

    return 0;
}
